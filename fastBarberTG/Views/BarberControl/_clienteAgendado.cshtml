@model fastBarberTG.Models.HorariosMarcadosModel
@{
    Layout = null;
}

<div class="costumer" data-horarioId="@Model.HorarioId" onclick="BarberControl.acessarColaborador(@Model.HorarioId); return true" style="cursor: pointer;">
    <div class="costumer-description">
        <div class="circle-status @Model.RetornaStatus()"></div>
        <h2>@Model.Nome @Model.Sobrenome.Substring(0, 1).</h2>
        <div class="white-circle"></div>
        <h2><span class="toPC" s>@Model.HoraCorte()</span></h2>
        <div class="white-circle"></div>
        <h2>@Model.RetornoIdade() Anos</h2>
    </div>
    <div class="costumer-contact">
        <span class="material-symbols-outlined">
            call
        </span>
        <p>@Model.Tel</p>
    </div>
</div>

