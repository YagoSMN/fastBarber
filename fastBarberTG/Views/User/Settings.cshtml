@using System.Web.UI.WebControls

@{
	Layout = null;
    ViewBag.Title = "Settings";
	<link href="~/Content/User/_UserSettings.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
}

<div class="user-menu">
	<div class="user-settings">
		<div class="closeSelection">
			<span id="CloseSettings" onclick="CloseSettings()" class="material-symbols-outlined">
				close
			</span>
		</div>
		<button>ALTERAR SENHA</button>
		<button>ALTERAR EMAIL</button>
		<button>HORÁRIO DE FUNCIONAMENTO</button>
		<button>PROCURAR CORTE</button>
		<button>MARCAR CORTES VIA LINK</button>
		<button class="logout">SAIR</button>
	</div>
</div>

<script>
    function CloseSettings() {
        $("#requestDiv").slideUp();
        $("#renderDiv").slideDown();
    }
</script>